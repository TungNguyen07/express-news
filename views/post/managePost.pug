extends ../layout

block content
    h1(style="text-align: center;") Manage Post
    if errors
        each error in errors
            .alert.alert-danger= error
    table.table
        tr
            th Title
            th Status
            th Action
        each post in post
            tr
                td
                    a(href="")= post.title
                td= post.status
                td
                    a.btn.btn-primary.ml-2(href="")= Approve
                    a.btn.btn-danger.ml-2(href="")= Deny