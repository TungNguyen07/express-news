extends ../layout

block content
    div#sign
        h1(style="text-align: center;") Sign up
        if errors
            each error in errors
                .alert.alert-danger= error
        form(action="/users/signup" method="POST" enctype="application/json")
            .form-group.row
                lable(for="name") Name 
                input#name.form-control.mt-2(type="text" name="name" value=values ? values.name : '')
            .form-group.row
                lable(for="email") Email
                input#email.form-control.mt-2(type="text" name="email" value=values ? values.email : '')
            .form-group.row
                lable(for="username") Username
                input#username.form-control.mt-2(type="text" name="username" value=values ? values.username : '')
            .form-group.row
                lable(for="password") Password
                input#password.form-control.mt-2(type="password" name="password")
            .form-group.row
                lable(for="phone") Numberphone
                input#phone.form-control.mt-2(type="text" name="phone" value=values ? values.phone : '')
            button.btn.btn-primary Sign up