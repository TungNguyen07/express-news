extends ../layout

block content
    div#signup
        h1(style="text-align: center;") Sign up
        if errors
            each error in errors
                .alert.alert-danger= error
        form(action="/users/signup" method="POST" enctype="application/json")
            .form-group.row
                lable(for="name") Tên 
                input#name.form-control.mt-2(type="text" name="name")
            .form-group.row
                lable(for="email") Email
                input#email.form-control.mt-2(type="text" name="email")
            .form-group.row
                lable(for="username") Tên đăng nhập 
                input#username.form-control.mt-2(type="text" name="username")
            .form-group.row
                lable(for="password") Mật khẩu
                input#password.form-control.mt-2(type="password" name="password")
            .form-group
                lable(for="avatar") Avatar
                input#avatar.form-control-file(type="file" name="avatar")
            button.btn.btn-primary Đăng ký